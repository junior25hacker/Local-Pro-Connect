# Environment configuration for email and site
# Select provider: gmail or outlook (or leave blank and fill host manually)
SMTP_PROVIDER=gmail

# If you want to override provider defaults, set the following:
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=465
EMAIL_USE_TLS=false
EMAIL_USE_SSL=true

# Replace with your real sender and app password (do not commit real secrets)
EMAIL_HOST_USER=youraddress@gmail.com
EMAIL_HOST_PASSWORD=your_gmail_app_password_here
DEFAULT_FROM_EMAIL=youraddress@gmail.com
SERVER_EMAIL=youraddress@gmail.com

# Site base URL used when building links in emails (fallback when request not available)
SITE_URL=http://localhost:8000

